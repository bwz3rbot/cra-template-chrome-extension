{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"],
			"@PopupPage/*": ["Page/Popup/*"],
			"@OptionsPage/*": ["Page/Options/*"],
			"@BackgroundScript/*": ["Script/Background/*"],
			"@ContentScript/*": ["Script/Content/*"],
			"@Component/*": ["Component/*"],
			"@Hook/*": ["Hook/*"],
			"@Util/*": ["Util/*"],
			"@Context/*": ["Context/*"]
		},
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"include": ["src"]
}
